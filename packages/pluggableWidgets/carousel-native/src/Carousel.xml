<!--                    <caption>Loop</caption>-->
<!--                    <description>After the last item the carousel continues to the first item.</description>-->
<!--                </property>-->
<!--            </propertyGroup>-->
            <propertyGroup caption="Common">
                <systemProperty key="Name"/>
                <systemProperty key="Visibility"/>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>
